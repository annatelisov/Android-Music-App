<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="#DFADBD"
    >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/song_IMG_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/ic_music"
            android:scaleType="centerCrop"
            />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/song_IMG_star"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:visibility="visible"
        android:layout_below="@id/song_IMG_heart"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_star" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/song_LBL_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/song_IMG_image"
            android:ellipsize="end"
            android:minLines="1"
            android:maxLines="2"
            android:textSize="20sp"
            android:text="SONG_NAME"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/song_LBL_nameAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/song_LBL_name"
            android:layout_toEndOf="@id/song_IMG_image"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:minLines="1"
            android:maxLines="2"
            android:text="AUTHOR_NAME"
            android:textColor="@color/black"
            />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/song_LBL_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/song_LBL_nameAuthor"
        android:layout_toEndOf="@id/song_IMG_image"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:minLines="1"
        android:maxLines="1"
        android:text="DURATION"
        android:textColor="@color/black"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/song_IMG_heart"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_heart" />

</RelativeLayout>
