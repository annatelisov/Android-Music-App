<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="16dp"
    app:cardElevation="12dp"
    app:cardCornerRadius="40dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2196F3">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/song_IMG_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/img_music"
            android:scaleType="centerCrop"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/song_IMG_star"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="22dp"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_star" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/song_LBL_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:minLines="1"
            android:maxLines="2"
            android:textSize="20sp"
            android:text="SONG_NAME"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/song_LBL_nameAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:minLines="1"
            android:maxLines="2"
            android:text="AUTHOR_NAME"
            android:textColor="@color/white"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/song_IMG_heart"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/ic_heart" />


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
